#include<stdio.h>  
int main()  
{    
    int n,i,j,k,s=1;  
    scanf ("%d",&n);   
    for(i=n;i>=1;i--)  
    {  
        for(j=1;j<=s;j++)  
        {  
            printf("  ");
        }  
        for(k=1;k<=(2*i-1);k++)  
        {  
            printf("* ");
        }  
        s++;  
        printf("\n");  
    }  
}  




//inverted left half pyramid

input 4:
 * * * *
   * * *
     * *
       *
   
#include <stdio.h>
int main()
{
    int n,i,j,k;
    scanf("%d",&n);
    for(i=0;i<n;i++) 
    {
        for(j=0;j<2*i;j++)
        {
            printf(" ");
        }
        for(k=0;k<n-i;k++)
        {
            printf("* ");
        }
        printf("\n");
    }
}



//right half pyramid

input : 3
*
* *
* * *
  
#include <stdio.h>
int main()
{
    int n,i,j;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("* ");
        }
        printf("\n");
    }
}
